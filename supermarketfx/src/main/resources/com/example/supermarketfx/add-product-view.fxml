<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.supermarketfx.AddProductController">
   <children>
      <TextField fx:id="productName" layoutX="226.0" layoutY="98.0" promptText="Name of your Product" />
      <Label layoutX="181.0" layoutY="101.0" prefHeight="20.0" prefWidth="38.0" text="Name">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="productPrice" layoutX="226.0" layoutY="143.0" promptText="Price of your Product" />
      <Label layoutX="181.0" layoutY="146.0" text="Price">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label layoutX="165.0" layoutY="190.0" text="Quantity">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="productQuantity" layoutX="226.0" layoutY="188.0" promptText="Amount of your Product" />
      <TextField fx:id="productBarcode" layoutX="226.0" layoutY="233.0" promptText="Barcode of your Product" />
      <Label layoutX="167.0" layoutY="236.0" text="Barcode">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button fx:id="addProductButton" layoutX="259.0" layoutY="297.0" mnemonicParsing="false" onAction="#onAddProductButtonClick" text="Add Product" />
      <CheckBox fx:id="isFood" layoutX="276.0" layoutY="270.0" mnemonicParsing="false" text="Food" />
      <Button fx:id="generateBarcodeButton" layoutX="389.0" layoutY="234.0" mnemonicParsing="false" onAction="#onGenerateBarcodeButtonClick" text="Generate" />
      <Button fx:id="backButton" layoutX="10.0" layoutY="370.0" mnemonicParsing="false" onAction="#onBackButtonClick" text="Go Back" />
   </children>
</AnchorPane>
